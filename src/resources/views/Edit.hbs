<div class="mt-4">
    <h3>Sửa bài viết</h3>

    <form method="POST" action="/cac-xa/{{vidu1._id}}?_method=PUT">
        <div class="mb-3 form-group">
            <label for="name" class="form-label">Tên địa chỉ</label>
            <input
                type="text"
                class="form-control"
                value="{{vidu1.name}}"
                id="name"
                name="name"
            />
        </div>
        <div class="mb-3 form-group">
            <label for="descripton" class="form-label">Mô tả nội dung</label>
            <textarea class="form-control" id="descripton" name="descripton">
                {{vidu1.descripton}}
            </textarea>

        </div>
        <div class="mb-3 form-group">
            <label for="img" class="form-label">Hình ảnh</label>
            <input
                type="text"
                class="form-control"
                value="{{vidu1.img}}"
                id="img"
                name="img"
            />
        </div>
        <div class="mb-3 form-group">
            <label for="videoID" class="form-label">Video clip</label>
            <input
                type="text"
                class="form-control"
                value="{{vidu1.videoID}}"
                id="videoID"
                name="videoID"
            />
        </div>

        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>

</div>